<div class="container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Group name: {{name}}</h5>
            <p class="card-text">Group description: {{description}}</p>
            <ul class="list-group">
                {{#each events}}
                    <li class="list-group-item">
                        <img src="{{image}}" width="60" height="80" alt="">
                        <form method="POST" action="/auth/site/groups/{{../id}}/events/{{id}}">
                            <input type="submit" class="btn btn-danger btn-sm float-right" value="Delete">
                        </form>
                        <p>Name: {{name}}</p>
                        <p>On sale: {{saleStart}} - {{saleEnd}}</p>
                        <p>Date: {{date}}</p>
                        <p>Segment: {{segment}}</p>
                        <p>Genre: {{genre}}</p>
                        <p>SubGenre: {{subGenre}}</p>
                    </li>
                {{/each}}
            </ul>
            <div class="mt-3">
                <form method="GET" action="/auth/site/groups/{{id}}/update">
                    <button type="submit" class="btn btn-primary mr-2">Edit</button>
                </form>
                <form method="POST" action="/auth/site/groups/{{id}}/delete">
                    <button type="submit" class="btn btn-danger">Delete Group</button>
                </form>
            </div>
            <form method="POST" action="/auth/site/groups/{{id}}/events" class="mt-3">
                <div class="form-group">
                    <label for="eventName">Event name:</label>
                    <input type="text" class="form-control" id="eventName" name="n">
                </div>
                <button type="submit" class="btn btn-success">Add Event</button>
            </form>
        </div>
    </div>
</div>