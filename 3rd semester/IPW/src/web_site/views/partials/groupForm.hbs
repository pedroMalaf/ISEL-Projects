<form method="POST" action="{{action}}" class="container">
      {{#if message}}
        <p> Error: {{message}}</p> 
       {{/if}} 
    <div class="form-group">
        <label for="groupName">Group name:</label>
        <input type="text" class="form-control" id="groupName" value="{{group.name}}" name="name">
    </div>
    <div class="form-group">
        <label for="groupDescription">Group description:</label>
        <input type="text" class="form-control" id="groupDescription" value="{{group.description}}" name="description">
    </div>
    <button type="submit" class="btn btn-primary">{{btnAction}} Group</button>
</form>